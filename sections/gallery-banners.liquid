<section class="gallery">

 {% for block in section.blocks %}
    <div class=" {{ block.settings.class | escape }}">  	
       <img src="{{ block.settings.image | img_url:'master' }}" alt="{{ block.settings.item-title | escape }}" loading="lazy">
        		
    </div>
{% endfor %}

</section>


{% schema %}
{
	"name": "items-gallery",
	"tag": "section",
  	"class": "section",
	"blocks": [
    		{
    			"type": "image",
    			"name": "Agregar imagen ",
    			"settings": [
                  {
                    "type": "image_picker",
                    "id": "image",
                    "label": "Image of the product"
                  },
 				{
                    "type": "text",
                    "id": "item-title",
                    "label": "Title",
                    "default": "Title of this product"
                  },
					{
                    "type": "text",
                    "id": "class",
                    "label": "image container class",
                    "default": "full"
                  }
                  
    			]
    		}
	],
	"presets": [
    {
      "name": "gallery images",
      "blocks": [
        {
          "type": "image"
        }
      ]
    }
  ]
}
{% endschema %}